<div class="album py-5 bg-light">
  <div class="d-flex justify-content-center">
    <div class="col-md-3">
      <div class="card mb-4 box-shadow">
        <br>
        <div class="card-body">
          <div class="container">
            <h2>Editar <%= resource_name.to_s.humanize %></h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
                <%= f.label :email, 'Email' %><br />
                <%= f.email_field :email, autofocus: true, class: 'form-control' %>
              </div>
              <br>
              <!---->
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
              <div class="form-group">
                  <%= f.label :name, 'Nombre' %><br />
                  <%= f.text_field :name, autofocus: true, class: 'form-control' %>
              </div>
              <br>
              <!---->
              <div class="form-group">
                <%= f.label :adress, 'Dirección' %><br />
                  <%= f.text_field :adress, autofocus: true, class: 'form-control' %>
              </div>
              <br>
              <!---->
              <div class="form-group">
                <%= f.label :phone, 'Telefono' %><br />
                  <%= f.text_field :phone, autofocus: true, class: 'form-control' %>
              </div>
              <br>
              <!---->
              <div class="field">
                <%= f.label :password, 'Contraseña' %> <i>(Dejalo en blanco si no quieres cambiarla)</i><br />
                <%= f.password_field :password, class: 'form-control' %>
                <% if @minimum_password_length %>
                      <em><%= @minimum_password_length %> caracteres minimo</em>
                <% end %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation, 'Confirma la contraseña' %><br />
                <%= f.password_field :password_confirmation, class: 'form-control' %>
              </div>
              <br>
              <!---->
              <div class="field">
                <%= f.label :current_password, 'Contraseña actual' %> <i>(necesitamos su contraseña actual para confirmar sus cambios)</i><br />
                <%= f.password_field :current_password, class: 'form-control' %>
              </div>
              <br>

              <div class="actions text-center">
                <%= f.submit "Actualizar", class: 'btn btn-secondary' %>
              </div>
            <% end %>
            <br>
            <!--
            <h3>Cancelar mi cuenta</h3>
            <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
            <%= link_to "Regresar", :back %>
            -->
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
