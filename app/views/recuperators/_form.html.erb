<%= form_with model: @recuperator do |form| %>
  <div class="form-group">
    <%= form.label :nit, "Cédula:"%>
    <div class="col-md-12">
      <%= form.number_field :nit, class: "form-control" %>
    </div>
    <br>
    <%= form.label :fullname, "Nombre completo:"%>
    <div class="col-md-12">
      <%= form.text_field :fullname, class: "form-control" %>
    </div>
    <br>
    <%= form.label :phone, "Teléfono:"%>
    <div class="col-md-12">
      <%= form.number_field :phone, class: "form-control" %>
    </div>
    <br>
    <%= form.label :adress, "Dirección:"%>
    <div class="col-md-12">
      <%= form.text_field :adress, class: "form-control" %>
    </div>
  </div>
  <br>
  <!---->
  <div class="row">
    <div class="col-md-12 text-center">
      <% if @recuperator.fullname? %>
        <%= form.submit "Actualizar ", class: "btn btn-default btn-secondary" %>
      <% else %>
        <%= form.submit "Crear ", class: "btn btn-default btn-secondary" %>
      <% end %>
    </div>
  </div>
<% end %>
